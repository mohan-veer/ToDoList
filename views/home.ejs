<%- include('partials/header'); -%>
<div class="box" id="heading">
    <h1><%= today %></h1>
    <h2><%= listTitle %></h2>
</div>
<div class="box">
        <% if(allTasks.length>0) { %>
            <% for(let task of allTasks){ %>
                <form action="/deleteTask" method="POST">
                    <div class="item">
                        <input type="checkbox" onChange="this.form.submit()" name="completed" value='<%= task._id %>' >
                        <p><%= task.taskItem %></p>
                    </div>
                    <input type="hidden" name="customListName" value="<%= listTitle %>">
                </form>
            <% } %>
        <% } %>
    <form class="item" action="/" method="POST">
        <input type="text" name="newTask" placeholder="New task">
        <button type="submit" name="button" value="<%= listTitle %>">+</button>
    </form>
</div>
<%- include('partials/footer'); -%>
